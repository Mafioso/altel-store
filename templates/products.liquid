{% block content %}
<div class="l-container">
  <h1 class="title-with-separator">Телефоны</h1>
  <div class="l-col d1-4 l-gutter-r">
    <h2 class="c-body">Refine by:</h2>
    <div class="refine-section">
      <h3 class="refine-section-h">Brand</h3>
      <ul class="refine-section-body">
        {% for i in (1..10) %}
        <li>
          <input id="id{{i}}" type="checkbox" />
          <label for="id{{i}}" class="refine-section-item">
            Brand (18)
          </label>
        </li>
        {% endfor %}
      </ul>
    </div>
    <div class="refine-section">
      <h3 class="refine-section-h">Rating</h3>
      <div class="star-progress">
        <span class="star">☆</span>
        <span class="star">☆</span>
        <span class="star">☆</span>
        <span class="star">☆</span>
        <span class="star">☆</span>
        <div class="star-progress-bar" style="width: 80%;">
          <span class="star">★</span>
          <span class="star">★</span>
          <span class="star">★</span>
          <span class="star">★</span>
          <span class="star">★</span>
        </div>
      </div>
    </div>
    <div class="refine-section">
      <a href="#">Clear all &times;</a>
    </div>

  </div><div class="l-col d3-4">
    <div class="l-col d1-3">
      <div class="box box--ratio ratio-2-3">
        <div class="box-content">
          <div class="cover-media product-box">
            <div class="cover-media" style="background-image: url({{ 'product.png' | asset_url }});"></div>
            <h2 class="product-box-h">iPhone</h2>
            <a href="/product" class="cover-media"></a>
            <div class="product-box-price">12040 T</div>
            <div class="product-box-cta">
              <a class="btn btn--cta btn--compact" href="/product#plans">Выбрать тариф</a>
            </div>
          </div>
        </div>
      </div>
    </div><div class="l-col d1-3">
      <div class="box box--ratio ratio-2-3">
        <div class="box-content">
          <div class="cover-media product-box">
            <div class="cover-media" style="background-image: url({{ 'product-2.png' | asset_url }});"></div>
            <h2 class="product-box-h">Samsung Galaxy S5 SM-G900H 16GB Factory Unlocked International Version - WHITE</h2>
            <a href="/product-2" class="cover-media"></a>
            <div class="product-box-price">12040 T</div>
            <div class="product-box-cta">
              <a class="btn btn--cta btn--compact" href="/product#plans">Выбрать тариф</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
